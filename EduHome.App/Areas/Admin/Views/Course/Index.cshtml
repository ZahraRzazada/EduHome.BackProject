@model IEnumerable<CourseGetDto>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">
                        <a class="btn btn-success" asp-action="create">
                            Add New Course
                        </a>
                    </h4>
                    <p class="card-description">
                        Add class <code>.table</code>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>CreatedAt</th>
                                    <th>Operations</th>
                             
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (CourseGetDto item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td><img src="~/assets/img/course/@item.Image" /></td>
                                        <td>@item.Name</td>
                                        <td>@item.Date.ToString("dd.MM.yyyy")</td>
                                        <td><a onclick="return confirm('are you sure?')" asp-action="remove" asp-route-id="@item.Id" class="badge badge-danger">Remove</a> <a asp-action="update" asp-route-id="@item.Id" class="badge badge-warning">Update</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

